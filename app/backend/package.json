{
  "name": "tfc-backend",
  "version": "1.0.0",
  "description": "",
  "main": "./build/server",
  "scripts": {
    "test": "mocha -r ts-node/register ./src/tests/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "test:coverage": "nyc npm run test",
    "test:coverage:json": "nyc --reporter=json-summary npm run test",
    "db:reset": "npx tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "build": "tsc --project tsconfig.json",
    "prestart": "npm run build && npm run db:reset",
    "start": "node ./build/server.js",
    "predev": "npm run db:reset",
    "dev": "tsnd --watch \"./src/**\" --transpile-only ./src/server.ts",
    "postinstall": "if [ ! -z 'cat ./packages.npm' ]; then npm i --ignore-scripts $(cat ./packages.npm); fi",
    "lint": "eslint ./src --ext .ts",
    "ncu": "ncu -i --dep=prod,dev --format group -p npm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/bcryptjs": "2.4.2",
    "@types/chai": "4.3.5",
    "@types/chai-http": "4.2.0",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.2",
    "@types/mocha": "10.0.1",
    "@types/node": "20.4.4",
    "@types/sequelize": "4.28.15",
    "@types/sinon": "10.0.15",
    "@types/validator": "13.7.17",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "chai": "4.3.7",
    "chai-http": "4.4.0",
    "eslint": "8.45.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "mocha": "10.2.0",
    "nodemon": "3.0.1",
    "npm-check-updates": "^16.10.16",
    "nyc": "15.1.0",
    "sequelize-cli": "6.6.1",
    "sinon": "15.2.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "jest": "29.6.1",
    "jsonwebtoken": "9.0.1",
    "mysql2": "3.5.2",
    "sequelize": "6.32.1"
  }
}
